.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__name 
        = current_user.name
      .side-bar__header__box__menu
        .side-bar__header__box__menu__new
          = link_to new_group_path do
            = icon('fas', 'edit')
        .side-bar__header__box__menu__edit
          = link_to edit_user_path(current_user)  do
            = icon('fas', 'cog', class: 'icon')
  .side-bar__main
    .side-bar__main__groups
      - current_user.groups.each do |group|
        .side-bar__main__groups__group
          = link_to group_messages_path(group) do
            .group-name 
              = group.name 
            .comment
              = group.show_last_message